<homeScreen>:
    
    BoxLayout:
        canvas:
            
            Rectangle:
                source: './assets/fill.jpg'
                size: self.size
                pos: self.pos
        FloatLayout: 
            BoxLayout:
                pos_hint: {'y':0.4,'x':0}
                size_hint: 1,0.3
                Button:
                    size_hint_x:0.12
                    background_normal: './assets/nolinear-unpressed.jpg'
                    
                    on_press: app.nonLinearWindow()
                Button:
                    size_hint_x:0.12
                    background_normal: './assets/ODE-unpressed.jpg'
                   
                    #on_press: app.differentialWindow()
                Button:
                    size_hint_x:0.12
                    background_normal: './assets/linealSystem-unpressed.jpg'
                    
                    #on_press: app.linearWindow()
                Button:
                    size_hint_x:0.12
                    background_normal: './assets/analyss-unpressed.jpg'
                    
                    #on_press: app.regressionWindow()
            Label: 
                text: 'New program'
                color: 0,0,0,1
                pos_hint: {'x':0,'y':0.2}
                halign: 'center'
            Label: 
                text: 'Non-Linear\nEquations'
                color: 0,0,0,1
                halign: 'center'
                pos_hint: {'x':-0.37,'y':-0.1}
            Label: 
                text: 'Differential\nEquations'
                color: 0,0,0,1
                pos_hint: {'x':-0.13,'y':-0.1}
                halign: 'center'
            Label: 
                text: 'Linear\nEquations'
                color: 0,0,0,1
                pos_hint: {'x':0.13,'y':-0.1}
                halign: 'center'
            Label: 
                text: 'Data\nRegression'
                color: 0,0,0,1
                pos_hint: {'x':0.37,'y':-0.1}
                halign: 'center'